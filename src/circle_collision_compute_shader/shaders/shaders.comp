#version 450

layout (local_size_x = 64) in;

// Binding 0 : Position storage buffer
layout(binding = 0) buffer Pos 
{
   vec2 positions[];
};

layout (binding = 1) uniform UBO 
{
	float dt;
	int count;
} ubo;

void main() 
{
	uint index = gl_GlobalInvocationID.x;
    if (index >= ubo.count) 
		return;

	positions[index] += vec2(0, ubo.dt * 0.1f);
}

